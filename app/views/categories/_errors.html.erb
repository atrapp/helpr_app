<% if @category.errors.any? %>
  <div id="errors">
    <p class="error-count">
      The form contains <%= pluralize(@category.errors.count, "error") %>.
    </p>
    <ul class="error-list">
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
