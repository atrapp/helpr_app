<%= form_for @location do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :address %>
  <%= f.text_field :address %><br />

  <%= f.label :cat %>
  <%= f.text_field :cat %><br />

  <%= f.label :public %>
  <%= radio_button("location", "public", "true") %>yes
  <%= radio_button("location", "public", "false") %>no<br />

  <%= f.label :lng %>
  <%= f.text_field :lng %><br />

  <%= f.label :lat %>
  <%= f.text_field :lat %><br />

  <%= f.submit %>

<% end %>