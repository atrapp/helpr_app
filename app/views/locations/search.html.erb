
<h2><%= @locations.count %> results for your search</h2>

<div class="searchform">
    <h4>Radius: <%= @radius %> mile(s)</h4>
    <h4>Your address: <%= @start_location %></h4>
</div>

<div class="container">
    <ol>
    <% @locations.each do |location| %>
        <li>                   
            <h3><%= location.name %></h3>
            <p>(<%= location.cat %>)</p>
            <p>Public? <%= location.public %></p>
            <p>Address: <%= location.address %></p>
            <%= static_map_for(location) %>
        </li>
        <hr />
    <% end %>
    </ol>
</div>