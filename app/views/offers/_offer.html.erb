<%= form_for @offer do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br />            
    
    <%= f.label :description %><br />
    <%= f.text_area(:description, size: "24x6") %><br />
          
    <%= f.label :date_start %>
    <%= f.date_field :date_start %><br />
  
    <%= f.label :date_end %>  
    <%= f.date_field :date_end %><br />    
    
    <%= f.label :user %>
    <%= f.text_field :user %><br />
    
    <%= f.label :category %>
    <%= f.text_field :category %><br />
   
    <%= f.label :location %>
    <%= f.text_field :location %><br />
        
    <%= f.submit %>       

<% end %>