<h2>All requests</h2>

<%= link_to "Create offer", new_offer_path %>

<table>

    <% @offers.each do |offer| %>     
 
        <tr>
            <td>Title:</td>             
            <td><%= offer.title %></td>            
        </tr>
        <tr>
            <td>Description:</td>
            <td><%= offer.description %></td>
        </tr>
        <tr>
            <td>Date start:</td>             
            <td><%= offer.date_start %></td>            
        </tr>
        <tr>
            <td>Date end:</td>             
            <td><%= offer.date_end %></td>            
        </tr>
        <tr>
            <td>User:</td>             
            <td><%= offer.user %></td>            
        </tr>
        <tr>
            <td>Category:</td>             
            <td><%= offer.category %></td>            
        </tr>
        <tr>
            <td>Location:</td>             
            <td><%= offer.location %></td>            
        </tr>
        <tr>  
            <td><a href="/offers/<%= offer.id %>"><button>SHOW</button></a></td>
            <td><a href="/offers/<%= offer.id %>/edit"><button>EDIT</button></a></td>
        </tr>
        
    <% end %>

</table>

