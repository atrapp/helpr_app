<%= render 'errors' %>

<div class="container">

    <%= form_for @request do |f| %>

        <%= f.label :user %>
        <%= f.text_field :user_id, :value => current_user.id %><br /> 

        <%= f.label :title %>
        <%= f.text_field :title %><br />            
        
        <%= f.label :description %><br />   
        <%= f.text_area(:description, size: "24x6") %><br />  
              
        <%= f.label :date_start %>
        <%= f.date_field :date_start %><br />
      
        <%= f.label :date_end %>
        <%= f.date_field :date_end %><br />
          
        <%= f.label :category %>
        <%= f.select("category_id", Category.all.collect {|c| [ c.title, c.id ] }, {include_blank: 'None'}) %><br />
         
        <%= f.label :location %>  
        <%= f.select("location_id", Location.all.collect {|l| [ l.name, l.id ] }, {include_blank: 'None'}) %><br />
            
        <%= f.submit %>       

    <% end %>

</div>

