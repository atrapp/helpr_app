<h2>All requests</h2>

<%= link_to "Create request", new_request_path %>

<table>

    <% @requests.each do |request| %>     
 
        <tr>
            <td>Title:</td>             
            <td><%= request.title %></td>            
        </tr>
        <tr>
            <td>Description:</td>
            <td><%= request.description %></td>
        </tr>
        <tr>
            <td>Date start:</td>             
            <td><%= request.date_start %></td>            
        </tr>
        <tr>
            <td>Date end:</td>             
            <td><%= request.date_end %></td>            
        </tr>
        <tr>
            <td>User:</td>             
            <td><%= request.user %></td>            
        </tr>
        <tr>
            <td>Category:</td>             
            <td><%= request.category %></td>            
        </tr>
        <tr>
            <td>Location:</td>             
            <td><%= request.location %></td>            
        </tr>
        <tr>  
            <td><a href="/requests/<%= request.id %>"><button>SHOW</button></a></td>
            <td><a href="/requests/<%= request.id %>/edit"><button>EDIT</button></a></td>
        </tr>
        
    <% end %>

</table>

