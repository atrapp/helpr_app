<h2>Request Data</h2>

 <table>

        <tr>
            <td>Title:</td>             
            <td><%= @request.title %></td>            
        </tr>
        <tr>
            <td>Description:</td>
            <td><%= @request.description %></td>
        </tr>
        <tr>
            <td>Date start:</td>             
            <td><%= @request.date_start %></td>            
        </tr>
        <tr>
            <td>Date end:</td>             
            <td><%= @request.date_end %></td>            
        </tr>
        <tr>
            <td>User:</td>             
            <td><%= @request.user %></td>            
        </tr>
        <tr>
            <td>Category:</td>             
            <td><%= @request.category %></td>            
        </tr>
        <tr>
            <td>Location:</td>             
            <td><%= @request.location %></td>            
        </tr>
        
</table>

<a href="/requests/<%= @request.id %>/edit"><button>EDIT</button></a>

<form action="/requests/<%= @request.id%>" method="post">
  <%= token_tag %>
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="DELETE">
</form>
