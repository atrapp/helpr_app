<h2>Request Data</h2>


<table>
    <section>       
        <tr>
            <td colspan="2"><h3>About User</h3></td>           
        </tr> 

        <tr>
            <td colspan="2"><%= gravatar_for @request.user %></td>
        </tr>    
        <tr>
            <td>Name:</td>             
            <td><%= @request.user.name %></td>            
        </tr>    
        <tr>
            <td>Gender:</td>             
            <td><%= @request.user.gender %></td>            
        </tr>
        <tr>
            <td>Age:</td>             
            <td><%= @request.user.age %></td>            
        </tr> 
        <tr>
            <td>Phone:</td>             
            <td><%= @request.user.phone %></td>            
        </tr>  
        <tr>
            <td>Email:</td>             
            <td><%= @request.user.email %></td>            
        </tr> 
        <tr>
            <td colspan="2"><%= @request.user.description %></td>                       
        </tr> 
    </section>
</table>

<table>
    <section>        
        <tr>
            <td colspan="2"><h3>Request info</h3></td>           
        </tr> 
        <tr>
            <td>Category:</td>             
            <td><%= @request.category.title %></td>            
        </tr>
        <tr>
            <td>Title:</td>             
            <td><%= @request.title %></td>            
        </tr>        
        <tr>
            <td>Date start:</td>             
            <td><%= @request.date_start %></td>            
        </tr>
        <tr>
            <td>Date end:</td>             
            <td><%= @request.date_end %></td>            
        </tr>  
        <tr>
            <td colspan="2"><%= @request.description %></td>           
        </tr>
    </section>
</table>

<table>
    <section>  
        <tr>
            <td colspan="2"><h3>Location</h3></td>           
        </tr>           
        <tr>
            <td>Location:</td>             
            <td><%= @request.location.name %></td>            
        </tr>
        <tr>
            <td>Address:</td>             
            <td><%= @request.location.address %></td>            
        </tr>
        <tr>
            <td>Category:</td>             
            <td><%= @request.location.cat %></td>            
        </tr>
         <tr>
            <td>Public?:</td>             
            <td><%= @request.location.public %></td>            
        </tr>
        <tr>     
            <td colspan="2"><%= static_map_for(@request.location) %></td>
        </tr>
    </section>
</table>

<% if current_user && (current_user.email == @request.user.email || current_user.email == "admin@helpr.com") %>

    <section>
        <a href="/requests/<%= @request.id %>/edit"><button>EDIT</button></a>

        <form action="/requests/<%= @request.id%>" method="post">
          <%= token_tag %>
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="DELETE">
        </form>
    </section>

<% end %>
