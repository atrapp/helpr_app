<a href="/users/<%= @user.id %>/edit"><button>EDIT</button></a>

<form action="/users/<%= @user.id%>" method="post">
  <%= token_tag %>
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="DELETE">
</form>
