<table>

        <tr>
            <td>Name:</td>             
            <td><%= @user.name %></td>            
        </tr>
        <tr>
            <td>Address:</td>
            <td><%= @user.address %></td>
        </tr>
        <tr>
            <td>Gender:</td>             
            <td><%= @user.gender %></td>            
        </tr>
        <tr>
            <td>Age:</td>             
            <td><%= @user.age %></td>            
        </tr>
        <tr>
            <td>Phone:</td>             
            <td><%= @user.phone %></td>            
        </tr>
        <tr>
            <td>Email:</td>             
            <td><%= @user.email %></td>            
        </tr>
        <tr>
            <td>Description:</td>             
            <td><%= @user.description %></td>            
        </tr>
        <tr>
            <td>Rating:</td>             
